<Window x:Class="AplOkien.Grades"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AplOkien"
        mc:Ignorable="d"
        Title="Grades" Height="250" Width="350">
    <Grid Margin="30,25,30,25">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="tbGname" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Row="0"/>
        <TextBox x:Name="tbGLastName" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Row="1" />

        <Label Content="Imię" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="0"/>
        <Label Content="Nazwisko" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="1"/>

        <DataGrid x:Name="dgGrades" Grid.Row="2" Margin="0,5,0,0" />

    </Grid>
</Window>
